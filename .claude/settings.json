{
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "jq -r '.tool_input.file_path' | bash ~/.claude/hooks/format-python.sh"
          }
        ]
      },
      {
        "matcher": "TodoWrite",
        "hooks": [
          {
            "type": "command",
            "command": "bash ~/.claude/hooks/check-milestone.sh"
          }
        ]
      }
    ]
  },
  "allowedCommands": [
    "git:*",
    "ls:*",
    "tree:*",
    "pwd:*",
    "which:*",
    "echo:*",
    "date:*",
    "wc:*",
    "head:*",
    "tail:*",
    "diff:*",
    "python:*",
    "python3:*",
    "pip:*",
    "pip3:*",
    "ruff:*",
    "pytest:*",
    "mypy:*",
    "uv:*",
    "conda:*",
    "gh:*",
    "aws:*",
    "docker:*",
    "kubectl:*",
    "bash:*",
    "jq:*",
    "cat:*"
  ]
}
